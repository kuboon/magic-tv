- model_class = Program
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%dl
  %dt= model_class.human_attribute_name(:url) + ':'
  %dd=  @program.url

  %dt= model_class.human_attribute_name(:name) + ':'
  %dd=  @program.name

  %dt= model_class.human_attribute_name(:description) + ':'
  %dd=  @program.description

  %dt= model_class.human_attribute_name(:start_at) + ':'
  %dd=  @program.start_at

  %dt= model_class.human_attribute_name(:end_at) + ':'
  %dd=  @program.end_at

  %dt= model_class.human_attribute_name(:status) + ':'
  %dd=  @program.status

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), programs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_program_path(@program), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), program_path(@program), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
