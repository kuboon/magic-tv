= simple_form_for @program, :html => { :class => 'form-horizontal' } do |f|
  = f.input :url
  = f.input :name
  = f.input :tag_list, input_html: {class: :tag_it}
  = f.input :channel
  = f.input :description, input_html: {rows: 5}
  = f.input :start_at, as: :date_time_picker
  = f.input :end_at, as: :date_time_picker
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), programs_path, :class => 'btn'
