- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%dl
  %dt= model_class.human_attribute_name(:name) + ':'
  %dd= @user.name

  %dt= model_class.human_attribute_name(:email) + ':'
  %dd
    = @user.email
    = @user.email.empty? ? "未登録" : @user.email_active? ? "認証済み" : raw("認証待ち(#{link_to "再送", resend_activation_user_path})")

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path, :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path, :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
